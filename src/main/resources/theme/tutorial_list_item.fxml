<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" hgap="20.0"
          styleClass="tutorial-item" xmlns="http://javafx.com/javafx/8.0.40"
          fx:controller="com.faforever.client.tutorial.TutorialListItemController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="70" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="230.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" styleClass="tutorial-item-image"
                   fitHeight="50" fitWidth="50" GridPane.rowSpan="2"/>
        <Label fx:id="titleLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               styleClass="tutorial-item-title" text="&lt;Tutorial title&gt;" wrapText="true" GridPane.columnIndex="1"
               GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
        <Label fx:id="ordinalLabel" styleClass="tutorial-item-ordunal" text="&lt;123&gt;"
               GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="TOP"/>
    </children>
</GridPane>

